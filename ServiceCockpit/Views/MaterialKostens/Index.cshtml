@model IEnumerable<ServiceCockpit.Models.MaterialKosten>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Servicerapport.VoranmeldungName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Verrechnungsart.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnzahlMaterial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.KostenTotal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Servicerapport.VoranmeldungName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Verrechnungsart.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AnzahlMaterial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KostenTotal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
