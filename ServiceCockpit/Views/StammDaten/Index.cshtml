                    <tr>
                        <th>
                            Firmen Name
                        </th>
                        <th>
                            Rapportierte Stunden Kosten
                        </th>
                        <th>
                            Rapportierte Material Kosten
                        </th>
                        <th>
                            Umsatz
                        </th>
                       
                        <th></th>
                    </tr>

                    @foreach (var item in Model.Organisation) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KostenZeit)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KostenMaterial)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.KostenTotal)
                            </td>
                           
                            <td>
                                @Html.ActionLink("Edit", "Edit", "Organisations", new { id=item.Id }, null) |
                                @Html.ActionLink("Details", "Details", "Organisations", new { id = item.Id }, null) |
                                @Html.ActionLink("Delete", "Delete", "Organisations", new { id = item.Id }, null)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
